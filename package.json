{
  "name": "@sentinel-ts/monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "test": "bun run --filter @sentinel-ts/sentinel test",
    "lint": "bun run --filter @sentinel-ts/sentinel lint",
    "lint:fix": "bun run --filter @sentinel-ts/sentinel lint:fix",
    "lint:ci": "bun run --filter @sentinel-ts/sentinel lint:ci",
    "format": "bun run --filter @sentinel-ts/sentinel format",
    "format:ci": "bun run --filter @sentinel-ts/sentinel format:ci",
    "build:prod": "bun run --filter @sentinel-ts/sentinel build:prod",
    "docs:dev": "bun run --filter @sentinel-ts/docs dev",
    "docs:build": "bun run --filter @sentinel-ts/docs build",
    "docs:preview": "bun run --filter @sentinel-ts/docs preview",
		"preview:github": "bun run --elide-lines 0 --filter @sentinel-ts/sentinel preview:github"
  },
  "devDependencies": {
    "gitlab-ci-local": "^4.63.0"
  }
}
